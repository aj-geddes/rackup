# Database
DATABASE_URL="postgresql://user:password@localhost:5432/poolleague?schema=public"

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"

# JWT Expiry
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# ============================================
# LEAGUE CUSTOMIZATION
# These variables customize your league's branding
# ============================================

# League name displayed throughout the app
LEAGUE_NAME="Kansas City Pool League"

# Short name for headers/mobile views
LEAGUE_SHORT_NAME="KCPL"

# Description shown on the home page
LEAGUE_DESCRIPTION="The premier women's pool league in Kansas City"

# Contact information (optional)
LEAGUE_CONTACT_EMAIL="info@example.com"
LEAGUE_CONTACT_PHONE="+1-555-123-4567"

# Location/region (optional)
LEAGUE_LOCATION="Kansas City, MO"

# External links (optional)
LEAGUE_WEBSITE=""
LEAGUE_RULES_URL=""

# ============================================
# ADMIN SETUP
# First admin account created on initial setup
# ============================================
ADMIN_EMAIL="admin@poolleague.com"
ADMIN_PASSWORD="ChangeThisPassword123!"

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================

# Google Drive API (for cloud backups)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI=""

# Twilio SMS (for invite system)
# Without Twilio, invite links are shown in the admin panel
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_NUMBER=""

# ============================================
# ADVANCED SETTINGS
# Usually don't need to change these
# ============================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
